<html>
<head>
    <title>Edit a footballer</title>
</head>

<body>
<h2>Edit a footballer:</h2>

{{#footballer}}
    <form action="/edit" method="post">
        <input type="text" value="{{name}}" name="name"/>
        <input type="text" value="{{position}}" name="position"/>
        <input type="text" value="{{club}}" name="club"/>
        <input type="number" value="{{goals}}" name="goals"/>
        <input type="hidden" value="{{id}}" name="id">
        <button type="submit">Submit</button>
    </form>
{{/footballer}}

</body>
</html>